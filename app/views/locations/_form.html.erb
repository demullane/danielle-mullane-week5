<%= form_for @location, html: {class: "form-horizontal"} do |f| %>
  <% if @location.errors.any? %>
    <div id = "error-explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
        <% @location.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form class = "form-horizontal">

    <div class = "form-group">
      <%= f.label :name, class: "control-label col-md-2" %>
      <div class = "form-controls col-md-4">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class = "form-group">
      <%= f.label :address, class: "control-label col-md-2" %>
      <div class = "form-controls col-md-4">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>

    <div class = "form-group">
      <%= f.label :zipcode, class: "control-label col-md-2" %>
      <div class = "form-controls col-md-4">
        <%= f.text_field :zipcode, class: "form-control" %>
      </div>
    </div>

    <div class = "form-group">
      <div class = "col-md-offset-2 col-md-4">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", locations_path, class: "btn btn-default" %>
      </div>
    </div>

  </form>

<% end %>
