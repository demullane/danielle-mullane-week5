<%= form_for [@location, @event], html: {class: "form-horizontal"} do |f| %>
  <% if @event.errors.any? %>
    <div id = "error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form class = "form-horizontal">

    <div class = "form-group">
      <%= f.label :description, class: "control-label col-md-2" %>
      <div class = "form-controls col-md-4">
        <%= f.text_field :description, class: "form-control" %>
      </div>
    </div>

    <div class = "form-group">
      <%= f.label :date, class: "control-label col-md-2" %>
      <div class = "form-controls col-md-4">
        <%= f.date_field :date, class: "form-control" %>
      </div>
    </div>

    <div class = "form-group">
      <%= f.label :require_id, "Requires ID", class: "control-label col-md-2" %>
      <div class = "form-controls col-md-4">
        <%= f.check_box :require_id %>
      </div>
    </div>

    <div class = "form-group">
      <div class = "col-md-offset-2 col-md-4">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", "/locations", class: "btn btn-default" %>
      </div>
    </div>
  </form>
<% end %>
